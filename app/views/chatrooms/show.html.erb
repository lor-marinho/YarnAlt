<h1 id="chatroom-h1">Welcome to the chatroom for <%= @yarn.name %></h1>
<div class="card-chatroom">
  <%= render 'shared/yarn', yarn: @yarn %>
</div>
<div id="messages" data-chatroom-id="<%= @chatroom.id %>">
  <% @chatroom.messages.each do |message| %>
    <div class="message-container" id="message-<%= message.id %>">
      <i class="author">
        <span><%= message.user.username %></span>
        <% date_message = message.created_at - 3*60*60 %>
        <small><%= date_message.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p class="message-content"><%= message.content %></p>
    </div>
  <% end %>

  <div class="chat-send-message">
  <%= simple_form_for [@yarn, @chatroom, @message ], remote: true do |f| %>
    <%= f.input :content, label: false, placeholder: "Write your message",
  :input_html => {:style=> 'width: 600px'}%>
    <%= f.submit "Send Message", class: 'btn btn-primary' %>
  <% end %>
</div>

</div>

